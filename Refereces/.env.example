# AI-Powered Student Hub - Environment Configuration
# Copy this file to .env and update the values for your development environment

# Backend API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Environment
NODE_ENV=development

# Application Settings
REACT_APP_APP_NAME=Student Hub
REACT_APP_VERSION=1.0.0

# External Services (Optional - for production)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Feature Flags
REACT_APP_ENABLE_PWA=false
REACT_APP_ENABLE_NOTIFICATIONS=false
REACT_APP_ENABLE_ANALYTICS=false

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security Configuration
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_REMEMBER_ME_DURATION=604800000

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_FONT_SIZE=medium
REACT_APP_ENABLE_DARK_MODE=true

# Real-time Features
REACT_APP_ENABLE_REAL_TIME_CHAT=true
REACT_APP_ENABLE_REAL_TIME_NOTIFICATIONS=true
REACT_APP_TYPING_INDICATOR_TIMEOUT=3000

# Pagination Defaults
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# Validation Rules
REACT_APP_MIN_PASSWORD_LENGTH=6
REACT_APP_MAX_BIO_LENGTH=500
REACT_APP_MAX_SKILLS_COUNT=20